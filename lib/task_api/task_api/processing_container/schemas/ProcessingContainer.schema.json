{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProcessingContainer",
  "description": "Defines a processing unit that bundles multiple task templates under a single container concept.",
  "type": "object",
  "required": [
      "name",
      "description",
      "templates"
  ],
  "properties": {
    "name": {
      "type": "string"
      },
    "description": {
      "type": "string"
      },
    "templates": { 
      "type": "array",  
      "items": {"$ref": "TaskTemplate.schema.json" }
      }
  }
}