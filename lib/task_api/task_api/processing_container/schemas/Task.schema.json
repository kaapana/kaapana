{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "type": "object",
  "required": [
    "name",
    "image",
    "inputs",
    "outputs"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "command": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "inputs": {
      "type": "array",
      "items": { "$ref": "IOVolume.schema.json" },
      "default": []
    },
    "outputs": {
      "type": "array",
      "items": { "$ref": "IOVolume.schema.json" },
      "default": []
    },
    "env": {
      "type": "array",
      "items": { "$ref": "ContainerEnvVar.schema.json" },
      "default": []
      },
    "resources": { "$ref": "Resources.schema.json" },
    "namespace": {
      "type": "string"
    },
    "registryUrl": {
      "type": "string"
    },
    "registryUsername": {
      "type": "string"
    },
    "registryPassword": {
      "type": "string"
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}