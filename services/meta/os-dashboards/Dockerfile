ARG NODE_VERSION=14.20.0
FROM node:${NODE_VERSION} AS base

LABEL REGISTRY="local-only"
LABEL IMAGE="os-dashboards-workflow-trigger"
LABEL VERSION="0.1.0"
LABEL CI_IGNORE="True"

USER node

WORKDIR /home/node
RUN curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.2/install.sh | bash
RUN git clone https://github.com/opensearch-project/OpenSearch-Dashboards && cd OpenSearch-Dashboards && git checkout 2.2
WORKDIR /home/node/OpenSearch-Dashboards
RUN yarn osd bootstrap

USER root
COPY workflow-trigger /home/node/OpenSearch-Dashboards/plugins/workflow-trigger
WORKDIR /home/node/OpenSearch-Dashboards/plugins/workflow-trigger
RUN yarn build --opensearch-dashboards-version 2.2.0 --allow-root